@model EscapeRoom
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Escape Room @Model.Name</h1>

<div class="row border-dark">
    <div class="col-8">
        <img class="mt-lg-4" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model?.Logotype))" alt="room-logo" />
    </div>
    <div class="col-4">
        <p>@Model.Description</p>
        <p><b>DIFFICULTY:</b> @Model.DifficultyLevel</p>
        <p><b>GROUP SIZE:</b> @Model.MinimumPlayers - @Model.MaximumPlayers</p>
        <p><b>TIME LIMIT:</b> @Model.TimeLimitMinutes minutes</p>
    </div>
</div>